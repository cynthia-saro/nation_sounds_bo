{% extends 'base.html.twig' %}

{% block title %}Nouvel artiste{% endblock %}

{% block body %}


    <h1 class="h1-newartist">Nouvel Artiste</h1>

<div class="new-artist">
    {# d√©composition par ligne #}
    {{ form_start(artistform) }}
    <div class="name-newartist">
        {{ form_label(artistform.name) }}
        {{ form_widget(artistform.name) }}
        {{ form_errors(artistform.name) }}
    </div>
    <div class="picture-newartist">
        {{ form_label(artistform.picture) }}
        {{ form_widget(artistform.picture) }}
        {{ form_errors(artistform.picture) }}
    </div>
    <div class="category-newartist">
        {{ form_label(artistform.category) }}
        {{ form_widget(artistform.category) }}
        {{ form_errors(artistform.category) }}
    </div>
    <div class="description-newartist">
        {{ form_label(artistform.description) }}
        {{ form_widget(artistform.description) }}
        {{ form_errors(artistform.description) }}
    </div>
        <button type="submit" class="submit">Envoyer</button>
    {{ form_end(artistform) }}

    <input type="button" value="Retour" onclick="history.back()" class="submit">


