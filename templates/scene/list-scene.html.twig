{% extends 'base.html.twig' %}

{% block title %}Liste scène{% endblock %}

{% block body %}

    <div class="navbar">
        <a href="{{ path('artists') }}">Les artistes</a>
        <a href="{{ path('securityinfos') }}">Les infos de sécurités</a>
        <a href="{{ path('actualities') }}">Les actualités</a>
        <a href="{{ path('scenes') }}">Les scènes</a> 
        <a href="{{ path('seances_artists') }}">Les séances</a> 
        <a href="{{ path('meet_artists') }}">Les rencontres</a> 
    </div>
    
    <h1 class="h1-scene">Les scènes</h1>
    <a href="{{path('new_scene')}}" class="submit-scene">Ajouter une scene</a>
    <table>
        <thead>
            <tr class="title-scene">
                <td>Nom</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for scene in scenes %}
                <tr>
                    <td class="scene-name">{{scene.name}}</td>
                    <td>
                        <table class="action-bouton">
                            <tr class="action-bouton">
                                <td>
                                    <a href="{{ path('delete_scene',{'id':scene.id}) }}" class="action-bouton">SUPPRIMER</a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
